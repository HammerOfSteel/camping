# Environment Configuration for Lits Camping Website
# Copy this file to .env and adjust values as needed

# Node Environment
NODE_ENV=development

# Theme Selection
# Available options:
#   - nordic-standard  (Forest Green, Nordic Blue, Cream - recommended, peaceful)
#   - nordic-minimal   (Lighter, softer Scandinavian minimalism)
#   - adventure-bold   (Vibrant oranges, adventurous energy)
NEXT_PUBLIC_THEME=nordic-standard

# Site Configuration
NEXT_PUBLIC_SITE_NAME=Lits Camping
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Database Configuration
DB_USER=litscamping
DB_PASSWORD=dev_password
DB_NAME=lits_camping
DATABASE_URL=postgresql://litscamping:dev_password@db:5432/lits_camping

# Authentication
NEXTAUTH_SECRET=your-secret-key-here-change-in-production
NEXTAUTH_URL=http://localhost:3000
ADMIN_PASSWORD=admin123

# Email Notifications
ENABLE_EMAIL_NOTIFICATIONS=false
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=your-email@gmail.com
EMAIL_SMTP_PASS=your-app-password

# Analytics (optional)
NEXT_PUBLIC_ANALYTICS_ENABLED=false
# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Booking System
NEXT_PUBLIC_SIRVOY_BOOKING_URL=https://5336c06044bd2.sirvoy.me/en
